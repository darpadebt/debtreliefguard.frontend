# Blog JSON list and shell HTML should never be cached between requests
/blogs.json
  Cache-Control: no-store, must-revalidate
  Content-Type: application/json; charset=utf-8
  Vary: Accept, Origin
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, OPTIONS
  Access-Control-Allow-Headers: *

/blog.index.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: no-store, must-revalidate
  Vary: Accept, Origin
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, OPTIONS
  Access-Control-Allow-Headers: *

# All generated blog HTML should be publicly cacheable but CORS-accessible
/blog/*.html
  Cache-Control: public, max-age=600
  Vary: Accept, Origin
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, OPTIONS
  Access-Control-Allow-Headers: *

# Blog folder (covers generated HTML + assets in /blog)
/blog/*
  Cache-Control: public, max-age=300
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, OPTIONS
  Access-Control-Allow-Headers: *

# Home and other HTML can also be no-cache if you prefer dynamic updates
/index.html
  Cache-Control: no-cache, must-revalidate
  Vary: Accept, Origin

